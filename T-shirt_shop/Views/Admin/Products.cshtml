@model IEnumerable<Product>

<h1>Manage Products</h1>

<a href="@Url.Action("Create", "Admin", new { area = "Admin" })" class="btn btn-primary">Create New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category.Name</td>
                <td>@item.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", "Admin", new { id = item.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", "Admin", new { id = item.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
