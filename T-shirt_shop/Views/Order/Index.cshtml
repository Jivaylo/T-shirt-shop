@model IEnumerable<Order>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Total</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.ApplicationUser.UserName</td>
                <td>@item.Total.ToString("C")</td>
                <td>@item.OrderDate.ToShortDateString()</td>
                <td>
                    <a href="@Url.Action("Confirm", "Order", new { id = item.Id })" class="btn btn-primary">Confirm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
