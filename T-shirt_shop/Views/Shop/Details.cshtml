@model Product

<div class="row">
    <div class="col-md-4">
        <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
    </div>
    <div class="col-md-8">
        <h1>@Model.Name</h1>
        <p>@Model.Description</p>
        <p>@Model.ImageUrl</p>
        <p>@Model.Price.ToString("C")</p>
        <a href="@Url.Action("AddToCart", "Shop", new { id = Model.Id })" class="btn btn-primary">Add to Cart</a>
    </div>
</div>
